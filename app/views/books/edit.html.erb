<main>
  <p id = "notice"></p> <!-- 位置調整用の空白 -->

  <div class = container>
    <div class = "row">
      <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>

        <%= form_with model: @book do |b| %>

          <% if @book.errors.any? %>
            <%= @book.errors.count %>error prohibited this obj from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <div>
            <label>Title</label>
            <%= b.text_field :title, autofocus: true %>
          </div>

          <div>
            <label>Opinion</label>
            <%= b.text_area :body %>
          </div>

          <%= b.submit "Update Book", class: "btn btn-success" %>

        <% end %>

        <a href = <%= book_path %>>Show</a>
        |
        <a href = <%= books_path %>>Back</a>

      </div>
    </div>
  </div>
</main>
