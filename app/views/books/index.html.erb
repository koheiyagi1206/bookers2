<p id = "notice"></p> <!-- 位置調整用の空白 -->

<div class = "container px-5 px-sm-0">
  <div class = "row">
    <%= render partial: "layouts/sidebar", locals: {book: @book, user: @user} %>

    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class = "table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan = "3"></th>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <a href = "<%= user_path(book.user_id) %>">
                  <%= image_tag book.user.get_image(80, 80) %>
                </a>
              </td>

              <td>
                <a href = "<%= book_path(book.id) %>">
                  <%= book.title %>
                </a>
              </td>

              <td><%= book.body %></td>

            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
