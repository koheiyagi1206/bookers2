<div class = "col-md-3">
  <!-- User info -->

  <h2>User info</h2>

  <!-- end of User info -->


  <!-- New Book -->

  <h2 class = "mt-3">New book</h2>

  <%= form_with model: book do |b| %>
    <label>Title</label>
    <%= b.text_field :title %>

    <label>Opinion</label>
    <%= b.text_area :body %>

    <%= b.submit "Create Book", class: "btn btn-success" %>
  <% end %>

  <!-- end of New Book -->

</div>
