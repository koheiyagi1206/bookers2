<div class = "col-md-3">
  <!-- User info -->

  <h2>User info</h2>
  <%= image_tag user_myself.get_image(100, 100) %>

  <table class = "table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user_myself.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user_myself.introduction %></th>
      </tr>
    </tbody>
  </table>

  <!-- end of User info -->


  <!-- New Book -->

  <h2 class = "mt-3">New book</h2>

  <%= form_with model: book do |b| %>
    <label>Title</label>
    <%= b.text_field :title %>

    <label>Opinion</label>
    <%= b.text_area :body %>

    <%= b.submit "Create Book", class: "btn btn-success" %>
  <% end %>

  <!-- end of New Book -->

</div>
