<p id = "notice"></p> <!-- 位置調整用の空白 -->

<div class = "container px-5 px-sm-0">
  <div class = "row">
    <%= render "layouts/sidebar", book: @book %>

    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class = "table">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan = "3"></th>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_image(80, 80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
